<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp_101.MainPage"
             BackgroundColor="#F5F5F5">
    <StackLayout Padding="30" VerticalOptions="Center">
        <!-- Icon -->
        <Image Source="drink_icon.png"
               HeightRequest="120" 
               HorizontalOptions="Center" 
               Margin="0,0,0,20" />

        <!-- Name -->
        <Label Text="Drink Picker"
               FontSize="36"
               TextColor="#4CAF50"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               Margin="0,0,0,20" />

        <!-- Button -->
        <Button Text="Get Started"
                FontSize="20"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="20"
                Padding="10"
                Margin="0,20,0,0"
                Clicked="OnGetStartClicked"
                HorizontalOptions="Center"
                WidthRequest="200" />

        <!-- Description -->
        <Label Text="Find the perfect drink for your mood!"
               FontSize="16"
               TextColor="#757575"
               HorizontalOptions="Center"
               Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
