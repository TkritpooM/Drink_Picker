<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp_101.QuestionPage3"
             Title="QuestionPage3"
             BackgroundColor="#C6FFE3">
    <Grid Padding="20" VerticalOptions="Start">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Question -->
        <Frame Grid.Row="0"
       BackgroundColor="White"
       CornerRadius="20"
       Padding="20"
       HeightRequest="220"
       HorizontalOptions="Center"
       WidthRequest="320"
       HasShadow="True">
            <VerticalStackLayout VerticalOptions="FillAndExpand" Spacing="0">
                <!-- Question No -->
                <Label Text="Question 3"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#CF600A"
                   HorizontalOptions="Start"
                   VerticalOptions="Start" />

                <!-- Spacer to push the second label down -->
                <BoxView HeightRequest="40" VerticalOptions="FillAndExpand" BackgroundColor="White"/>

                <!-- Question Title -->
                <Label Text="What time of day is it?"
                   FontSize="28"
                   TextColor="#333333"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            </VerticalStackLayout>
        </Frame>

        <!-- Divider Line -->
        <BoxView Grid.Row="1"
             HeightRequest="1"
             BackgroundColor="Black"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Center"
             Margin="0,30,0,30" />

        <!-- Choice -->
        <VerticalStackLayout Grid.Row="2"
                     Spacing="20"
                     VerticalOptions="Start"
                     HorizontalOptions="Center">
            <!-- Morning -->
            <Frame BackgroundColor="White"
           CornerRadius="30"
           Padding="15"
           WidthRequest="300"
           HeightRequest="70"
           HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChoice1Tapped" />
                </Frame.GestureRecognizers>
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#FFD700" CornerRadius="15" />
                    <Label Text="Morning"
                   FontSize="22"
                   TextColor="#333333"
                   VerticalOptions="Center"
                   Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Afternoon -->
            <Frame BackgroundColor="White"
           CornerRadius="30"
           Padding="15"
           WidthRequest="300"
           HeightRequest="70"
           HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChoice2Tapped" />
                </Frame.GestureRecognizers>
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#00BCD4" CornerRadius="15" />
                    <Label Text="Afternoon"
                   FontSize="22"
                   TextColor="#333333"
                   VerticalOptions="Center"
                   Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Evening -->
            <Frame BackgroundColor="White"
           CornerRadius="30"
           Padding="15"
           WidthRequest="300"
           HeightRequest="70"
           HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChoice3Tapped" />
                </Frame.GestureRecognizers>
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#9C27B0" CornerRadius="15" />
                    <Label Text="Evening"
                   FontSize="22"
                   TextColor="#333333"
                   VerticalOptions="Center"
                   Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Night -->
            <Frame BackgroundColor="White"
           CornerRadius="30"
           Padding="15"
           WidthRequest="300"
           HeightRequest="70"
           HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChoice4Tapped" />
                </Frame.GestureRecognizers>
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#8BC34A" CornerRadius="15" />
                    <Label Text="Night"
                   FontSize="22"
                   TextColor="#333333"
                   VerticalOptions="Center"
                   Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>