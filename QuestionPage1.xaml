<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp_101.QuestionPage1"
             Title="QuestionPage1"
             BackgroundColor="#FFC6C6">
    <Grid Padding="20" VerticalOptions="Start">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Question -->
        <Frame Grid.Row="0"
           BackgroundColor="White"
           CornerRadius="20"
           Padding="20"
           HeightRequest="220"
           HorizontalOptions="Center"
           WidthRequest="320"
           HasShadow="True">
            <VerticalStackLayout VerticalOptions="FillAndExpand" Spacing="0">
                <!-- Question No -->
                <Label Text="Question 1"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#CF600A"
                       HorizontalOptions="Start"
                       VerticalOptions="Start" />

                <!-- Spacer to push the second label down -->
                <BoxView HeightRequest="40" VerticalOptions="FillAndExpand" BackgroundColor="White"/>

                <!-- Question Title -->
                <Label Text="How are you feeling today?"
                       FontSize="28"
                       TextColor="#333333"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </VerticalStackLayout>
        </Frame>

        <!-- Divider Line -->
        <BoxView Grid.Row="1"
                 HeightRequest="1"
                 BackgroundColor="Black"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="Center"
                 Margin="0,30,0,30" />

        <!-- Choice -->
        <VerticalStackLayout Grid.Row="2"
                         Spacing="20"
                         VerticalOptions="Start"
                         HorizontalOptions="Center">
            <!-- Calm -->
            <Frame BackgroundColor="White"
               CornerRadius="30"
               Padding="15"
               WidthRequest="300"
               HeightRequest="70"
               HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChoiceTapped" />
                </Frame.GestureRecognizers>
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#FFD700" CornerRadius="15" />
                    <Label Text="Calm"
                       FontSize="22"
                       TextColor="#333333"
                       VerticalOptions="Center"
                       Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Excited -->
            <Frame BackgroundColor="White"
               CornerRadius="30"
               Padding="15"
               WidthRequest="300"
               HeightRequest="70"
               HasShadow="True">
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#00BCD4" CornerRadius="15" />
                    <Label Text="Excited"
                       FontSize="22"
                       TextColor="#333333"
                       VerticalOptions="Center"
                       Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Tired -->
            <Frame BackgroundColor="White"
               CornerRadius="30"
               Padding="15"
               WidthRequest="300"
               HeightRequest="70"
               HasShadow="True">
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#9C27B0" CornerRadius="15" />
                    <Label Text="Tired"
                       FontSize="22"
                       TextColor="#333333"
                       VerticalOptions="Center"
                       Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Stressed -->
            <Frame BackgroundColor="White"
               CornerRadius="30"
               Padding="15"
               WidthRequest="300"
               HeightRequest="70"
               HasShadow="True">
                <HorizontalStackLayout>
                    <BoxView WidthRequest="30" HeightRequest="30" BackgroundColor="#8BC34A" CornerRadius="15" />
                    <Label Text="Stressed"
                       FontSize="22"
                       TextColor="#333333"
                       VerticalOptions="Center"
                       Margin="20,0,0,0" />
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>